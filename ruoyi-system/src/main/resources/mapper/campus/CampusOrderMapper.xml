<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.campus.mapper.CampusOrderMapper">
    
    <resultMap type="CampusOrder" id="CampusOrderResult">
        <result property="orderId"    column="order_id"    />
        <result property="orderSn"    column="order_sn"    />
        <result property="buyerId"    column="buyer_id"    />
        <result property="sellerId"    column="seller_id"    />
        <result property="totalAmount"    column="total_amount"    />
        <result property="status"    column="status"    />
        <result property="address"    column="address"    />
        <result property="payTime"    column="pay_time"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectCampusOrderVo">
        select order_id, order_sn, buyer_id, seller_id, total_amount, status, address, pay_time, del_flag, create_by, create_time, update_by, update_time, remark from campus_order
    </sql>

    <select id="selectCampusOrderList" parameterType="CampusOrder" resultMap="CampusOrderResult">
        <include refid="selectCampusOrderVo"/>
        <where>  
            <if test="orderSn != null  and orderSn != ''"> and order_sn = #{orderSn}</if>
            <if test="buyerId != null "> and buyer_id = #{buyerId}</if>
            <if test="sellerId != null "> and seller_id = #{sellerId}</if>
            <if test="totalAmount != null "> and total_amount = #{totalAmount}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="address != null  and address != ''"> and address = #{address}</if>
            <if test="payTime != null "> and pay_time = #{payTime}</if>
        </where>
    </select>
    
    <select id="selectCampusOrderByOrderId" parameterType="Long" resultMap="CampusOrderResult">
        <include refid="selectCampusOrderVo"/>
        where order_id = #{orderId}
    </select>

    <insert id="insertCampusOrder" parameterType="CampusOrder" useGeneratedKeys="true" keyProperty="orderId">
        insert into campus_order
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderSn != null and orderSn != ''">order_sn,</if>
            <if test="buyerId != null">buyer_id,</if>
            <if test="sellerId != null">seller_id,</if>
            <if test="totalAmount != null">total_amount,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="address != null">address,</if>
            <if test="payTime != null">pay_time,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orderSn != null and orderSn != ''">#{orderSn},</if>
            <if test="buyerId != null">#{buyerId},</if>
            <if test="sellerId != null">#{sellerId},</if>
            <if test="totalAmount != null">#{totalAmount},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="address != null">#{address},</if>
            <if test="payTime != null">#{payTime},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateCampusOrder" parameterType="CampusOrder">
        update campus_order
        <trim prefix="SET" suffixOverrides=",">
            <if test="orderSn != null and orderSn != ''">order_sn = #{orderSn},</if>
            <if test="buyerId != null">buyer_id = #{buyerId},</if>
            <if test="sellerId != null">seller_id = #{sellerId},</if>
            <if test="totalAmount != null">total_amount = #{totalAmount},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="address != null">address = #{address},</if>
            <if test="payTime != null">pay_time = #{payTime},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where order_id = #{orderId}
    </update>

    <delete id="deleteCampusOrderByOrderId" parameterType="Long">
        delete from campus_order where order_id = #{orderId}
    </delete>

    <delete id="deleteCampusOrderByOrderIds" parameterType="String">
        delete from campus_order where order_id in 
        <foreach item="orderId" collection="array" open="(" separator="," close=")">
            #{orderId}
        </foreach>
    </delete>
</mapper>