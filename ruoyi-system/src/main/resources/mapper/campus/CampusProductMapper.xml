<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.campus.mapper.CampusProductMapper">

    <resultMap type="CampusProduct" id="CampusProductResult">
        <result property="productId"    column="product_id"    />
        <result property="userId"    column="user_id"    />
        <result property="title"    column="title"    />
        <result property="description"    column="description"    />
        <result property="imageUrls"    column="image_urls"    />
        <result property="price"    column="price"    />
        <result property="status"    column="status"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="nickName"   column="nick_name"   />
    </resultMap>

    <sql id="selectCampusProductVo">
        select p.product_id, p.user_id, p.title, p.description, p.image_urls, p.price, p.status, p.del_flag, p.create_by, p.create_time, p.update_by, p.update_time, p.remark, u.nick_name
        from campus_product p
                 left join sys_user u on u.user_id = p.user_id
    </sql>

    <select id="selectCampusProductList" parameterType="CampusProduct" resultMap="CampusProductResult">
        <include refid="selectCampusProductVo"/>
        <where>
            <if test="userId != null "> and p.user_id = #{userId}</if>
            <if test="title != null  and title != ''"> and p.title like concat('%', #{title}, '%')</if>
            <if test="status != null  and status != ''"> and p.status = #{status}</if>
        </where>
    </select>

    <select id="selectCampusProductByProductId" parameterType="Long" resultMap="CampusProductResult">
        <include refid="selectCampusProductVo"/>
        where p.product_id = #{productId}
    </select>

    <insert id="insertCampusProduct" parameterType="CampusProduct" useGeneratedKeys="true" keyProperty="productId">
        insert into campus_product
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="title != null and title != ''">title,</if>
            <if test="description != null">description,</if>
            <if test="imageUrls != null">image_urls,</if>
            <if test="price != null">price,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="title != null and title != ''">#{title},</if>
            <if test="description != null">#{description},</if>
            <if test="imageUrls != null">#{imageUrls},</if>
            <if test="price != null">#{price},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <update id="updateCampusProduct" parameterType="CampusProduct">
        update campus_product
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="title != null and title != ''">title = #{title},</if>
            <if test="description != null">description = #{description},</if>
            <if test="imageUrls != null">image_urls = #{imageUrls},</if>
            <if test="price != null">price = #{price},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where product_id = #{productId}
    </update>

    <delete id="deleteCampusProductByProductId" parameterType="Long">
        update campus_product set del_flag = '2' where product_id = #{productId}
    </delete>

    <delete id="deleteCampusProductByProductIds" parameterType="String">
        update campus_product set del_flag = '2' where product_id in
        <foreach item="productId" collection="array" open="(" separator="," close=")">
            #{productId}
        </foreach>
    </delete>

    <select id="selectCampusProductByProductIdForUpdate" resultMap="CampusProductResult">
        select
            p.product_id, p.user_id, p.title, p.description, p.image_urls, p.price, p.status, p.del_flag, p.create_by, p.create_time, p.update_by, p.update_time, p.remark, u.nick_name
        from campus_product p
                 left join sys_user u on u.user_id = p.user_id
        where p.product_id = #{productId}
            for update
    </select>

    <update id="updateCampusProductStatus">
        update campus_product
        set status = #{status}, update_time = sysdate()
        where product_id = #{productId} and status = '0' </update>

</mapper>
