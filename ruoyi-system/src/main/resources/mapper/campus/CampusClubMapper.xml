<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.campus.mapper.CampusClubMapper">
    
    <resultMap type="CampusClub" id="CampusClubResult">
        <result property="clubId"    column="club_id"    />
        <result property="clubName"    column="club_name"    />
        <result property="logo"    column="logo"    />
        <result property="description"    column="description"    />
        <result property="presidentUserId"    column="president_user_id"    />
        <result property="presidentName"    column="president_name"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectCampusClubVo">
        select club_id, club_name, logo, description, president_user_id, president_name, status, create_by, create_time, update_by, update_time, remark from campus_club
    </sql>

    <select id="selectCampusClubList" parameterType="CampusClub" resultMap="CampusClubResult">
        <include refid="selectCampusClubVo"/>
        <where>  
            <if test="clubId != null "> and club_id = #{clubId}</if>
            <if test="clubName != null  and clubName != ''"> and club_name like concat('%', #{clubName}, '%')</if>
            <if test="presidentName != null  and presidentName != ''"> and president_name like concat('%', #{presidentName}, '%')</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectCampusClubByClubId" parameterType="Long" resultMap="CampusClubResult">
        <include refid="selectCampusClubVo"/>
        where club_id = #{clubId}
    </select>

    <insert id="insertCampusClub" parameterType="CampusClub" useGeneratedKeys="true" keyProperty="clubId">
        insert into campus_club
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="clubName != null and clubName != ''">club_name,</if>
            <if test="logo != null">logo,</if>
            <if test="description != null">description,</if>
            <if test="presidentUserId != null">president_user_id,</if>
            <if test="presidentName != null">president_name,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="clubName != null and clubName != ''">#{clubName},</if>
            <if test="logo != null">#{logo},</if>
            <if test="description != null">#{description},</if>
            <if test="presidentUserId != null">#{presidentUserId},</if>
            <if test="presidentName != null">#{presidentName},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateCampusClub" parameterType="CampusClub">
        update campus_club
        <trim prefix="SET" suffixOverrides=",">
            <if test="clubName != null and clubName != ''">club_name = #{clubName},</if>
            <if test="logo != null">logo = #{logo},</if>
            <if test="description != null">description = #{description},</if>
            <if test="presidentUserId != null">president_user_id = #{presidentUserId},</if>
            <if test="presidentName != null">president_name = #{presidentName},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where club_id = #{clubId}
    </update>

    <delete id="deleteCampusClubByClubId" parameterType="Long">
        delete from campus_club where club_id = #{clubId}
    </delete>

    <delete id="deleteCampusClubByClubIds" parameterType="String">
        delete from campus_club where club_id in 
        <foreach item="clubId" collection="array" open="(" separator="," close=")">
            #{clubId}
        </foreach>
    </delete>
</mapper>